<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado selecionado -->
    <item android:state_checked="true">
        <!-- Formato -->
        <shape android:shape="rectangle">
            <solid android:color="#2196F3"/> <!-- Azul -->
            <!--  Bordas -->
            <corners android:radius="8dp"/>
            <stroke android:width="4dp" android:color="#0D47A1"/> <!-- contorno -->
        </shape>
    </item>

    <!-- Estado ocupado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#F44336"/> <!-- Vermelho -->
            <corners android:radius="8dp"/>
            <stroke android:width="4dp" android:color="#A10D0D"/> <!-- contorno -->
        </shape>
    </item>

    <!-- Estado normal (livre) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke android:width="4dp" android:color="#757575"/>
        </shape>
    </item>

</selector>